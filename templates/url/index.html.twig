{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.url_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.url_list'|trans }}</h1>
    {% if urls is defined and urls|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.long_url' }}</th>
                <th>{{ 'label.creation_date'|trans }}</th>
                <th>{{ 'label.mod_date'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for url in urls %}
                <tr>
                    <td>{{ url.id }}</td>
                    <td><a href="{{ url.longUrl }}" target="_blank">{{ url.longUrl }}</a> (<a href="{{app.request.getSchemeAndHttpHost()}}/url/{{ url.id }}">{{app.request.getSchemeAndHttpHost()}}/url/{{ url.id }}</a>)</td>
                    <td>{{ url.creationDate|date }}</td>
                    <td>{{ url.modDate|date }}</td>
                    <td>
                        <a href="{{ url('url_redirect', {id: url.id}) }}" title="{{ 'action.go_to'|trans }}">
                            {{ 'action.go_to'|trans }}
                        </a>
                        <a href="{{ url('url_show', {id: url.id}) }}" title="{{ 'action.details'|trans }}">
                            {{ 'action.details'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}