{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'title.change_password'|trans }}</h1>

    {{ form_start(form) }}

    {{ form_row(form.oldPassword) }}
    {{ form_row(form.password) }}

    <button type="submit" class="btn btn-primary">{{ 'action.edit'|trans }}</button>

    <a href="{{ path('url_index') }}" class="btn btn-secondary">{{ 'action.back'|trans }}</a>

    {{ form_end(form) }}
{% endblock %}
